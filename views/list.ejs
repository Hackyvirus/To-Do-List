<%- include('partials/header') %>

<div class="box" id="heading"><h1><%= Today %></h1></div>

<div class="box">
    <% newItem.forEach((element) => { %>
    <form action="/delete" method="post">
        <div class="item">
            <input value="<%= element._id %>" name="checkbox" onchange="this.form.submit()" type="checkbox">
            <p><%= element.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= Today %>">
    </form>
    <%});%>
    <form class="box" action="/" method="post">
        <input type="text" name="name" id="name" autocomplete="off" />
        <button type="submit" name="List" value="<%= Today %>">+</button>
      </form>
</div>


<%- include('partials/footer') %>
